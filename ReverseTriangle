import java.util.*;

 

public class ReverseTriangle {

    public static void main(String args[]) {

        int n;

   

        Scanner sc = new Scanner(System.in);

        System.out.println("Enter n value:");

        n = sc.nextInt();

 

        for(int i =n; i > 0; i--) {

           

            for(int j = i; j > 0; j--) {

                System.out.print("* ");

            }

            System.out.print("\n");

        }

    }

}
